---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Hero from '../components/react/Hero.tsx';
import ProjectCard from '../components/react/ProjectCard.tsx';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

// Importa el logo de la universidad desde los assets
import logoUnca from '../assets/images/logo-unca.png';

const projects = await getCollection('projects');
const sortedProjects = projects.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout title="Portafolio de Leonardo">
    <main class="min-h-screen">

        <Hero client:load />

        <!-- NUEVA SECCIÓN DE CONFIANZA -->
        <div class="py-12 bg-black/5 dark:bg-white/5">
            <div class="max-w-7xl mx-auto px-4 text-center">
                <p class="text-sm font-bold tracking-wider uppercase text-slate-500 dark:text-slate-400 mb-4">
                    Formado en
                </p>
                <div class="flex justify-center">
                    <!-- Contenedor para el fondo blanco -->
                    <div class="bg-white rounded-lg p-2 inline-block shadow">
                        <Image
                            src={logoUnca}
                            alt="Logo Universidad Nacional de Cañete"
                            class="h-12 w-auto"
                            loading="eager"
                        />
                    </div>
                </div>
            </div>
        </div>

        <section id="projects-section" class="px-4 py-20 md:px-8 max-w-6xl mx-auto">
            <div class="flex items-center justify-between mb-12">
                <h2 class="text-3xl font-bold">Proyectos Destacados</h2>
                <a href="https://github.com/mercer2511" target="_blank" rel="noopener noreferrer" class="text-[var(--color-accent)] hover:underline text-sm font-medium transition-colors">
                    Ver todo en GitHub &rarr;
                </a>
            </div>

            {sortedProjects.length > 0 ? (
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {sortedProjects.map((project) => {
                        const projectProps = {
                            slug: project.slug,
                            title: project.data.title,
                            description: project.data.description,
                            tags: project.data.tags,
                            github: project.data.github?.toString(),
                            link: project.data.link?.toString(),
                        };
                        return <ProjectCard project={projectProps} client:visible />;
                    })}
                </div>
            ) : (
                <p class="text-center text-[var(--color-text-muted)]">Cargando proyectos...</p>
            )}
        </section>

    </main>
</Layout>
